#exercise7


sentence1 = "Simple is better than complex ."
sentence2 = "Complex is better than complicated ."

# Step 1
list1 = sentence1.split(' ')
list2 = sentence2.split(' ')
set1 = set(list1)
set2 = set(list2)

print("Set 1:", set1)
print("Set 2:", set2)

# Step 2
union_set = set1.union(set2)
intersection_set = set1.intersection(set2)
difference_set = set1.difference(set2)

print("Union:", union_set)
print("Intersection:", intersection_set)
print("Difference (Set1 - Set2):", difference_set)

# Step 3
print("Are the two sets disjoint?:", set1.isdisjoint(set2))
print("Is Set1 a subset of Set2?:", set1.issubset(set2))
print("Is Set1 a superset of Set2?:", set1.issuperset(set2))

#exercise8
Company = {
    "Department1": {"name": "Data Governance", "Revenue": 20011.78},
    "Department2": {"name": "Electricity Pricing", "Revenue": 55451.901},
    "Department3": {"name": "Gas Pricing", "Revenue": 62728.99},
    "Department4": {"name": "Smart Meter", "Revenue": 41728.99}
}

print(Company.keys())
print(Company.keys())
print(Company["Department1"].keys())
print(Company["Department2"])
print(Company["Department3"])
print(Company["Department2"]["name"])
print(Company["Department4"]["Revenue"])
print(Company["Department4"].keys())