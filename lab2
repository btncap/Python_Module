##EXERCISE5##
annuity= []
i = 0.05
n= 5
tenant_payment_1 = 1000
tenant_payment_2= 2300
tenant_payment_3 = 750
pv_1 = round(tenant_payment_1 * ((1 - (1 + i)**-n) / i) * (1 + i), 3)
pv_2 = round(tenant_payment_2 * ((1 - (1 + i)**-n) / i) * (1 + i), 3)
pv_3 = round(tenant_payment_3 * ((1 - (1 + i)**-n) / i) * (1 + i), 3)

annuity.extend([pv_1, pv_2, pv_3])
max_pv = max(annuity)
min_pv = min(annuity)
print("Annuity Present Values:", annuity)
print("Maximum Present Value:", max_pv)
print("Minimum Present Value:", min_pv)

##EXERCISE6##

month1 = (('Comprehensive', 250, 120), ('Third-Party', 150, 90))
month2 = (('Comprehensive', 260, 140), ('Third-Party', 155, 100))
month3 = (('Comprehensive', 255, 130), ('Third-Party', 160, 95))

net_income_month1_comprehensive = month1[0][1] - month1[0][2]
net_income_month1_third_party = month1[1][1] - month1[1][2]
net_income_month2_comprehensive = month2[0][1] - month2[0][2]
net_income_month2_third_party = month2[1][1] - month2[1][2]
net_income_month3_comprehensive = month3[0][1] - month3[0][2]
net_income_month3_third_party = month3[1][1] - month3[1][2]

total_comprehensive_income = (net_income_month1_comprehensive +
                              net_income_month2_comprehensive +
                              net_income_month3_comprehensive)
total_third_party_income = (net_income_month1_third_party +
                            net_income_month2_third_party +
                            net_income_month3_third_party)  
print("Total Comprehensive Income:", total_comprehensive_income)
print("Total Third-Party Income:", total_third_party_income)       

##loops##

months = [
    (('Comprehensive', 250, 120), ('Third-Party', 150, 90)),
    (('Comprehensive', 260, 140), ('Third-Party', 155, 100)),
    (('Comprehensive', 255, 130), ('Third-Party', 160, 95))
]

total_comprehensive_income = 0
total_third_party_income = 0

for month in months:
    comprehensive = month[0]
    third_party = month[1]
    
    net_income_comprehensive = comprehensive[1] - comprehensive[2]
    net_income_third_party = third_party[1] - third_party[2]
    
    total_comprehensive_income += net_income_comprehensive
    total_third_party_income += net_income_third_party
print("Total Comprehensive Income:", total_comprehensive_income)
print("Total Third-Party Income:", total_third_party_income)

